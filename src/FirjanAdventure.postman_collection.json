{
  "info": {
    "name": "FirjanAdventure - API Jogo",
    "_postman_id": "c2a9f111-0000-4000-9000-aaaaaaaaaaaa",
    "description": "Coleção para criar/listar/selecionar/mover/deletar personagens e dirigir o jogo via API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "personagemId", "value": "1" },
    { "key": "dx", "value": "1" },
    { "key": "dy", "value": "0" }
  ],
  "item": [
    {
      "name": "Personagens",
      "item": [
        {
          "name": "Listar personagens",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/personagens",
              "host": ["{{baseUrl}}"],
              "path": ["api", "personagens"]
            }
          }
        },
        {
          "name": "Criar personagem (padrão)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/personagens",
              "host": ["{{baseUrl}}"],
              "path": ["api", "personagens"]
            }
          }
        },
        {
          "name": "Criar personagem (com parâmetros)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Aventurier\",\n  \"sexo\": \"M\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/personagens/criar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "personagens", "criar"]
            },
            "description": "Cria um personagem com nome/sexo. Requer endpoint implementado."
          }
        },
        {
          "name": "Detalhar personagem por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/personagens/{{personagemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "personagens", "{{personagemId}}"]
            }
          }
        },
        {
          "name": "Deletar personagem por ID",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/personagens/{{personagemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "personagens", "{{personagemId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Jogo",
      "item": [
        {
          "name": "Selecionar personagem (ativo)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jogo/selecionar/{{personagemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jogo", "selecionar", "{{personagemId}}"]
            }
          }
        },
        {
          "name": "Mover (dx,dy)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dx\": {{dx}},\n  \"dy\": {{dy}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/jogo/mover",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jogo", "mover"]
            },
            "description": "Ex.: W/Up (0,-1), S/Down (0,1), A/Left (-1,0), D/Right (1,0)."
          }
        }
      ]
    }
  ]
}
